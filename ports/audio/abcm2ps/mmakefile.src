#MM    ports-audio-abcm2ps-docs \
#MM    ports-audio-abcm2ps-fetch

#MM  ports-audio-abcm2ps-formats : ports-audio-abcm2ps-fetch
#MM  ports-audio-abcm2ps-docs : ports-audio-abcm2ps-fetch


REPOSITORIES := http://moinejf.free.fr
ARCHBASE     := abcm2ps-8.13.1
TARGETDIR    := $(AROS_CONTRIB)/MultiMedia/Audio/Abcm2ps
NOWARN_FLAGS := $(NOWARN_UNINITIALIZED)
USER_CFLAGS  := $(NOWARN_FLAGS) \
    -DA4_FORMAT=1 \
    -DDEFAULT_FDIR="\"PROGDIR:Formats\"" \
    -DVERSION="\"8.13.1\"" \
    -DVDATE="\"December 10, 2016\""

FILES := \
    abcm2ps \
    abcparse \
    buffer \
    deco \
    draw \
    format \
    front \
    glyph \
    music \
    parse \
    subs \
    svg \
    syms
FILES := $(addprefix $(PORTSDIR)/abcm2ps/$(ARCHBASE)/,$(FILES))

%build_prog mmake=ports-audio-abcm2ps progname=Abcm2ps \
    files=$(FILES) targetdir=$(TARGETDIR) \
    uselibs=""


%fetch mmake=ports-audio-abcm2ps-fetch archive=$(ARCHBASE) destination=$(PORTSDIR)/abcm2ps \
    location=$(PORTSSOURCEDIR) archive_origins=$(REPOSITORIES) suffixes="tar.gz" \
    patches_specs=$(ARCHBASE)-aros.diff:$(ARCHBASE):-p1


FORMATFILES := flute.fmt landscape.fmt musicfont.fmt
%copy_files_q mmake=ports-audio-abcm2ps-formats files=$(FORMATFILES) src=$(PORTSDIR)/abcm2ps/$(ARCHBASE) \
    dst=$(TARGETDIR)/Formats


DOCFILES := $(notdir \
    $(call WILDCARD, $(PORTSDIR)/abcm2ps/$(ARCHBASE)/*.abc) \
    $(call WILDCARD, $(PORTSDIR)/abcm2ps/$(ARCHBASE)/*.eps) \
    $(call WILDCARD, $(PORTSDIR)/abcm2ps/$(ARCHBASE)/*.txt) \
    ) Changes README

%copy_files_q mmake=ports-audio-abcm2ps-docs files=$(DOCFILES) src=$(PORTSDIR)/abcm2ps/$(ARCHBASE) \
    dst=$(TARGETDIR)/Docs


%common
