TARGETDIR    := $(AROS_CONTRIB)/Games/Platform/Hurrican


####################################################################################################
# fetch source

REPOSITORIES := http://archives.aros-exec.org/share/game/action
ARCHBASE     := hurrican-src-svn85

%fetch mmake=ports-game-hurrican-fetch archive=$(ARCHBASE) destination=$(PORTSDIR)/hurrican \
    location=$(PORTSSOURCEDIR) archive_origins=$(REPOSITORIES) suffixes="tar.bz2" \
    patches_specs=$(ARCHBASE)-aros.diff:$(ARCHBASE):-p1


####################################################################################################
# fetch data

%fetch mmake=ports-game-hurrican-data-fetch archive=hurrican-data destination=$(PORTSDIR)/hurrican \
    location=$(PORTSSOURCEDIR) archive_origins=$(REPOSITORIES) suffixes="zip"


####################################################################################################
# build program

NOWARN_FLAGS := $(NOWARN_DISCARDED_QUALIFIERS) $(NOWARN_UNUSED_LOCAL_TYPEDEFS)
HURRICAN_COMMONFLAGS := -DPLATFORM_SDL -DENABLE_CONSOLE_COMMANDS -DUSE_MODPLUG -DDEBUG -DUSE_GL1 -fexceptions
USER_CFLAGS  := $(NOWARN_FLAGS) $(HURRICAN_COMMONFLAGS)
USER_CXXFLAGS := -fpermissive $(HURRICAN_COMMONFLAGS)

CONFIG_CFLAGS := $(subst -Werror ,,$(CONFIG_CFLAGS))
CONFIG_CXXFLAGS := $(subst -Werror ,,$(CONFIG_CXXFLAGS))

USER_INCLUDES:= -I$(PORTSDIR)/hurrican/$(ARCHBASE)/src/SDLPort -I$(PORTSDIR)/hurrican/$(ARCHBASE)/src/cml \
    -I$(PORTSDIR)/hurrican/$(ARCHBASE)/src -I$(AROS_INCLUDES)/SDL -I$(AROS_INCLUDES)/libmodplug \
    -I$(PORTSDIR)/hurrican/$(ARCHBASE)/src/unrarlib040/unrarlib
USER_LDFLAGS := -static-libstdc++

SDL_CFILES := SDLPort/SDL_fmod

SDL_CXXFILES := SDLPort/SDL_port SDLPort/texture

# EGL_FILES := SDLPort/eglport
