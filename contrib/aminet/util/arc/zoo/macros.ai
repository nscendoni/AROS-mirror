;procedure index, used in-line to save some microseconds
call_index	macro
	mov	si,bx			;si = bx * 5 (5 byte hash entries)
	shl	si,1			;si = bx * 2 * 2 + bx
	shl	si,1
	add	si,bx
	endm	

malloc	macro	siz
	ifdif	<bx>,<siz>
	mov	bx,siz
	endif
	mov	ah,48h
	int	21h
	endm

