#
#  Makefile to make BZip2.

include $(SRCDIR)/config/aros.cfg

FILES := \
	blocksort \
	huffman \
	crctable \
	randtable \
	compress \
	decompress \
	bzlib \
	bzip2

USER_CFLAGS = -D_FILE_OFFSET_BITS=32

EXEDIR := $(AROS_CONTRIB)/Misc/aminet/C

%build_prog mmake=aminet-util-arc-bzip2 \
    progname=bzip2 targetdir=$(EXEDIR) \
    files=$(FILES)

%common

