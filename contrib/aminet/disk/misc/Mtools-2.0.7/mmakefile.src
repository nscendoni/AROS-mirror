
include $(SRCDIR)/config/aros.cfg

DESTDIR	:= $(AROS_CONTRIB)/Misc/aminet/disk/misc/Mtools-2.0.7

SRCDIR := src/

MATTRIB	:= $(SRCDIR)mattrib \
            $(SRCDIR)buf_read \
            $(SRCDIR)buf_write \
            $(SRCDIR)devices \
            $(SRCDIR)dir_read \
            $(SRCDIR)dir_write \
            $(SRCDIR)expand \
            $(SRCDIR)fat_read \
            $(SRCDIR)init \
            $(SRCDIR)match \
            $(SRCDIR)parse \
            $(SRCDIR)subdir \
            $(SRCDIR)amiga_devices
	
MCD	:= $(SRCDIR)mcd \
            $(SRCDIR)buf_read \
            $(SRCDIR)devices \
            $(SRCDIR)dir_read \
            $(SRCDIR)expand \
            $(SRCDIR)fat_read \
            $(SRCDIR)init \
            $(SRCDIR)is_dir \
            $(SRCDIR)match \
            $(SRCDIR)parse \
            $(SRCDIR)subdir \
            $(SRCDIR)amiga_devices
            	
MCOPY	= $(SRCDIR)mcopy \
            $(SRCDIR)getopt

MDEL	= $(SRCDIR)mdel \
            $(SRCDIR)buf_read \
            $(SRCDIR)buf_write \
            $(SRCDIR)devices \
            $(SRCDIR)dir_read \
            $(SRCDIR)dir_write \
	    $(SRCDIR)expand \
	    $(SRCDIR)fat_free \
	    $(SRCDIR)fat_read \
	    $(SRCDIR)fat_write \
	    $(SRCDIR)init \
	    $(SRCDIR)match \
	    $(SRCDIR)parse \
	    $(SRCDIR)subdir \
	    $(SRCDIR)amiga_devices \
	    	
MDIR	= $(SRCDIR)mdir \
            $(SRCDIR)buf_read \
            $(SRCDIR)devices \
            $(SRCDIR)dir_read \
            $(SRCDIR)expand \
            $(SRCDIR)fat_read \
	    $(SRCDIR)init \
	    $(SRCDIR)is_dir \
	    $(SRCDIR)match \
	    $(SRCDIR)parse \
	    $(SRCDIR)subdir \
	    $(SRCDIR)amiga_devices
	
MFORMAT	= $(SRCDIR)mformat \
            $(SRCDIR)fat_read \
            $(SRCDIR)fat_write \
            $(SRCDIR)fat_free \
            $(SRCDIR)buf_read \
            $(SRCDIR)buf_write \
            $(SRCDIR)devices \
	    $(SRCDIR)init \
            $(SRCDIR)dir_read \
            $(SRCDIR)dir_write \
            $(SRCDIR)expand \
            $(SRCDIR)getopt \
	    $(SRCDIR)amiga_devices

