            $(SRCDIR)devices \
            $(SRCDIR)dir_read \
	    $(SRCDIR)dir_write \
	    $(SRCDIR)expand \
	    $(SRCDIR)fat_read \
	    $(SRCDIR)init \
	    $(SRCDIR)amiga_devices
	
MMD	= $(SRCDIR)mmd \
            $(SRCDIR)buf_read \
            $(SRCDIR)buf_write \
            $(SRCDIR)devices \
            $(SRCDIR)dir_make \
            $(SRCDIR)dir_read \
	    $(SRCDIR)dir_write \
            $(SRCDIR)expand \
            $(SRCDIR)fat_read \
            $(SRCDIR)fat_write \
            $(SRCDIR)init \
            $(SRCDIR)match \
            $(SRCDIR)parse \
	    $(SRCDIR)subdir \
            $(SRCDIR)amiga_devices
	
MRD	= $(SRCDIR)mrd \
            $(SRCDIR)buf_read \
            $(SRCDIR)buf_write \
            $(SRCDIR)devices \
            $(SRCDIR)dir_read \
            $(SRCDIR)dir_write \
	    $(SRCDIR)expand \
            $(SRCDIR)fat_free \
            $(SRCDIR)fat_read \
            $(SRCDIR)fat_write \
            $(SRCDIR)init \
            $(SRCDIR)match \
            $(SRCDIR)parse \
