include $(SRCDIR)/config/aros.cfg

FILES := \
	main \
	rexx \
	compile \
	expr \
	template \
	interpre \
	nextsymb \
	rexxfunc \
	builtin \
	rxstr \
	rxconv \
	rxmath \
	rxword \
	rxfiles \
	address \
	variable \
	trace \
