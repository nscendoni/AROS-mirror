include $(SRCDIR)/config/aros.cfg

EXEDIR := $(AROS_CONTRIB)/MultiMedia/Audio/MadAHI

FILES  := madoss \
	  bit \
	  decoder \
	  fixed \
	  frame \
	  huffman \
	  layer12 \
	  layer3 \
	  stream \
	  synth \
	  timer \
	  version

CFLAGS += -DHAVE_CONFIG_H -O2 -DFPM_INTEL

